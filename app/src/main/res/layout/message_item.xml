<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/username_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/other_message"
        android:layout_alignStart="@id/other_message"
        android:layout_marginBottom="-20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="John" />

    <TextView
        android:id="@+id/my_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="#26A69A"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/other_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="#FF7043"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/timestamp_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_message"
        android:layout_alignEnd="@id/other_message"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="12dp"
        android:textColor="#333333"
        android:textSize="11sp"
        tools:text="8:00" />

    <TextView
        android:id="@+id/timestamp_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_message"
        android:layout_alignStart="@id/my_message"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-4dp"
        android:textColor="#333333"
        android:textSize="11sp"
        tools:text="10:00" />

</RelativeLayout>